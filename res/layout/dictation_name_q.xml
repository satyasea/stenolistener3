<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent" android:layout_height="fill_parent">




    <ImageView
            android:layout_below="@+id/text_titleDictation"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:id="@+id/q"
            android:src="@drawable/q" android:layout_marginTop="20dp" android:layout_marginRight="20dp">
    </ImageView>

<TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/text_DictationResult" android:gravity="top|left" android:layout_below="@+id/q" android:visibility="invisible" android:minLines="2"
          android:layout_marginTop="20dp" android:layout_marginBottom="20dp" android:layout_marginRight="20dp"
          android:layout_margin="20dp" android:layout_marginLeft="20dp"></TextView>



    <Button android:layout_height="wrap_content" android:id="@+id/btn_startDictation"   android:layout_below="@+id/text_DictationResult" android:text="@string/button_dictation_name" android:layout_width="wrap_content" android:layout_weight="1"
            android:layout_alignParentStart="true" android:layout_alignParentEnd="true"
            android:layout_marginLeft="20dp" android:layout_marginRight="20dp"></Button>
    <Button android:layout_height="wrap_content" android:id="@+id/btn_tts_name" android:layout_below="@+id/btn_startDictation" android:text="@string/button_tts_name" android:layout_width="wrap_content"
            android:layout_weight="1" android:visibility="invisible"
            android:layout_alignParentStart="true" android:layout_marginLeft="20dp"
            android:layout_alignEnd="@+id/btn_startDictation"></Button>



</RelativeLayout>
